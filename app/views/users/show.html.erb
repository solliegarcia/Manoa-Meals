<div class="container">
  <div class="jumbotron text-center">
    <h2><%= @user.first_name %> <%= @user.last_name %></h2><br>
        <p><%= @user.email_address %></p>
  </div>
  <div class="panel panel-default">
    <div class="panel-body">
        <h3 style="text-align:left;">Meal Plans</h3>
        <table class="table table-hover table-bordered">
          <tr>
            <th scope="col">Name</th>
            <th scope="col">Course</th>
            <th scope="col">Date</th>
            <th scope="col">Actions</th>
          </tr>
          <% @meal_plans.each do |plan| %>
            <tr>
              <td scope="row"><%= plan.name %></td>
              <td>Lunch</td>
              <td><%= plan.date.strftime("%m/%d/%Y") %></td>
              <td><%= link_to "Show", meal_plan_path(plan) %> <%= link_to "Delete", controller: 'meal_plans', action: 'destroy', id: plan.id, method: :delete %></td>
            </tr>
          <% end %>
        </table>
        <%= link_to "New Meal Plan", new_meal_plan_path, class: 'btn pull-right' %>
    </div>
  </div>
</div>
